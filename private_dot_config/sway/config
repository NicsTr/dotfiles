#    urgent_workspace #2f343a #900000 #ffffff
#  }
#}

bindsym $mod+p move workspace to output right

input * {
        xkb_layout "fr"
}

bar swaybar_command waybar
default_border none
exec nm-applet
gaps inner 4
gaps outer 1
smart_gaps on

bindsym $mod+l exec "swaylock -f -l"

include /etc/sway/config.d/*

